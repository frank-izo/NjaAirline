#!groovy

node {

    try {
        stage 'Checkout'
            checkout scm

            // Get the code from a GitHub repository
            git credentialsId: 'mycredentials', url: 'https://github.com/frank-iz/njaairline/'

            slackSend color: "warning", message: "Started `${env.JOB_NAME}#${env.BUILD_NUMBER}`\n\n_The changes:_\n${lastChanges}"

        stage 'Build'
            env.PATH="${env.WORKSPACE}/venv/bin:/usr/bin:${env.PATH}"
            sh 'virtualenv --python=python3.7 venv'
            sh 'source venv/bin/activate'
            sh 'pip install -r requirements.txt'
            env.DJANGO_SETTINGS_MODULE = "njaairline.settings.jenkins"

        stage 'Publish results'
            slackSend color: "good", message: "Build successful: `${env.JOB_NAME}#${env.BUILD_NUMBER}` <${env.BUILD_URL}|Open in Jenkins>"
    }

    catch (err) {
        slackSend color: "danger", message: "Build failed :face_with_head_bandage: \n`${env.JOB_NAME}#${env.BUILD_NUMBER}` <${env.BUILD_URL}|Open in Jenkins>"

        throw err
    }

}
